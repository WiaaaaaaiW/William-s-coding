primes = [2]
a = 3
factors = {}
numbers = int(input('Plug in a number to factor: '))

while a <= 300:
    is_prime = True
    for prime in primes:
        if a % prime == 0:
            is_prime = False
            break
    if is_prime:
        primes.append(a)
    a = a + 1

if numbers in primes:
    print(f'{numbers} is a prime number')
else:
    original_number = numbers
    for num in primes:
        count = 0
        while numbers % num == 0:
            count += 1
            numbers = numbers // num
        if count > 0:
            factors[num] = count
        if numbers == 1:
            break

    if numbers > 1:
        factors[numbers] = 1

formatted_factors = [f"{prime}^{count}" if count > 1 else str(prime) for prime, count in factors.items()]
print(f'Prime factors of {original_number}: {formatted_factors}')
